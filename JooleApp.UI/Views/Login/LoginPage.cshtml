@model JooleApp.Domain.tblUser
@{
    ViewBag.Title = "LoginPage";
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <link href="@Url.Content("~/Content/LoginPage.css")" rel="stylesheet" type="text/css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js">
    </script>
    @*script for showing register modal*@
    <script type="text/javascript">


        $(document).ready(function () {
            $("#btnShowModal").click(function () {
                $("#SignUpModal").modal('show');
            });

            $("#btnHideModal").click(function () {
                $("#SignUpModal").modal('hide');
            });

            var RegisterStringValue = '@(ViewBag.RegisterMessage)';
            if (RegisterStringValue != "") {
                $("#SignUpModal").modal('show');
            }
        });
    </script>

</head>
<body>
    <div id="BodyDetail">

        <p id="Loginlbl"></p>
        <div>
            <div id="signUp">
                <!-- a button to perform modal popup -->
                <button id="btnShowModal" type="button"
                        class="btn btn-sm btn-default ">
                    Sign Up
                </button>
                @*@Html.ActionLink("Sign Up", "ModalPopUp", "Login")*@
            </div>


            <!-- sign up modal form appears in a fade style -->
            <div class="modal fade" tabindex="-1" id="SignUpModal"
                 data-keyboard="false" data-backdrop="static">

                <!-- size of the modal -->
                <div class="modal-dialog modal-lg">

                    <!-- Modal content -->
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">
                                ×
                            </button>
                            <h4 class="modal-title">Register Form</h4>
                        </div>
                        <div class="modal-body">
                            @*input form*@
                            @using (Html.BeginForm("LoginPage", "Login", FormMethod.Post, new { @id = "SignUpBox" , enctype = "multipart/form-data" }))
                            {
                                @Html.AntiForgeryToken()

                                //image preview
                                <label for="imagePreview" class="fieldName"> Image Preview: </label>
                                <div class="imgPreview" id="imgPreview">
                                    <img class="imgPreview-img"
                                         id="yourImage"
                                         src="~/images/@ViewBag.ImagePath"
                                         alt="your image" />
                                </div>
                                //add image
                                <label for="image" class="fieldName">Your Profile Pic:</label>
                                <input type="file" name="inputFile" id="inputFile" accept="image/*" />
                                <br />

                                //input username
                                <tr class="form-group">
                                    <td>User Name</td>
                                    <td class="col-md-10">
                                        @Html.EditorFor(model => model.userName, new { htmlAttributes = new { @class = "form-control" } })
                                    </td>
                                    <td>
                                        @Html.ValidationMessageFor(model => model.userName, "", new { @class = "error" })
                                    </td>
                                </tr>

                                //input emailAddress
                                <tr class="form-group">
                                    <td>Email Address</td>
                                    <td class="col-md-10">
                                        @Html.EditorFor(model => model.emailAddress, new { htmlAttributes = new { @class = "form-control" } })
                                    </td>

                                </tr>

                                //input password
                                <tr class="form-group">
                                    <td>Password</td>
                                    <td class="col-md-10">
                                        @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control" } })
                                    </td>
                                    <td>
                                        @Html.ValidationMessageFor(model => model.password, "", new { @class = "error" })
                                    </td>
                                </tr>

                                //input confirm password
                                <tr class="form-group">
                                    <td>Confirm Password</td>
                                    <td class="col-md-10">
                                        @Html.EditorFor(model => model.confirmPassword, new { htmlAttributes = new { @class = "form-control" } })
                                    </td>
                                    <td>
                                        @Html.ValidationMessageFor(model => model.confirmPassword, "", new { @class = "error" })
                                    </td>
                                </tr>
                                <tr>
                                    @ViewBag.RegisterMessage
                                </tr>


                                @*<div class="form-group">
                                        <input class="form-control" placeholder="Login Password"
                                               type="password" id="inputPassword" />
                                    </div>*@


                                <div class="modal-footer">
                                    <button type="submit" class="btn btn-primary button button4">Sign</button>
                                    <button type="button" id="btnHideModal" class="btn btn-primary button button4"> Back </button>
                                </div>

                                <div>
                                    @*sign up message*@


                                    @ViewBag.LogInMessage


                                </div>
                            }
                        </div>
                    </div>

                </div>
            </div>



            @using (Html.BeginForm("Authorize", "Login", FormMethod.Post, new { @id = "loginBox" }))
            //action name, controller name, form method, html attribute
            {
                <div>
                    <table>
                        @*UserID label and input:*@
                        <tr>
                            <td>
                                @Html.LabelFor(model => model.userName, new { @id = "useridlbl" })
                            </td>
                            <td>
                                @Html.TextBoxFor(model => model.userName, new { @id = "useridtextbox", @Value = ViewBag.LoginID })

                            </td>
                        </tr>

                        @*Password label and input*@
                        <tr>
                            <td>
                                @Html.LabelFor(model => model.password, new { @id = "passwordlbl" })
                            </td>
                            <td>
                                @Html.TextBoxFor(model => model.password, null, new { @id = "passwordtextbox" })
                            </td>
                        </tr>

                        @*login error message*@
                        <tr>
                            <td id="errorMessage" class="text-danger">
                                @ViewBag.LoginErrorMessage

                            </td>
                        </tr>

                    </table>
                </div>


                <div id="loginButton">



                    <input type="submit" name="name" value="Log In" id="LoginBtn_1">
                </div>
            }
        </div>


    </div>

</body>
@*script for uploading image *@
<script>
    const inputFile = document.getElementById("inputFile");
    const previewCont = document.getElementById("imgPreview");
    const previewImage = previewCont.querySelector(".imgPreview-img");

    inputFile.addEventListener("change", function () {
        const file = this.files[0];

        if (file) {
            const fileReader = new FileReader();
            previewImage.style.display = "inline";

            fileReader.addEventListener("load", function () {
                previewImage.setAttribute("src", this.result);
            });

            fileReader.readAsDataURL(file);
        }
    });
</script>
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")
@Scripts.Render("~/bundles/bootstrap")
</html>

