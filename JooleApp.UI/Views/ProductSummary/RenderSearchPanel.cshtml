@model JooleApp.UI.DataModels.ProductDetail

@{ 
    List<String> ids = TempData["Selected"] as List<String>;
}

<div class="details">

    <div class="attTypeSearch">
        <div class="searchText">
            Search
        </div>
        <button class="btn btnSave searchButton">
            Save
        </button>
        <button class="btn btnSave">
            Clear
        </button>
    </div>

    <div class="uselessDisp">
        <div class="attType">
            Product
        </div>

        <div class="attType">
            Project
        </div>
    </div>

    <div class="attType">
        Technical Specifications :
    </div>

    @foreach (KeyValuePair<String, List<String>> attName in Model.searchPanel)
    {
        if (@attName.Value[0] != @attName.Value[1])
        {
            <div class="attName">
                @attName.Key :
                @{
                    var temp2 = (attName.Key).Replace(" ", "_");
                    var tempVal = "valueUpdate_" + temp2;
                }
                <div class="currentValue" id=@tempVal> 0 </div>
            </div>
            <div class="slider">
                @{
                    var temp = "minVal_" + temp2;
                }

                <div class="leftRight" id=@temp>
                    @attName.Value[0]
                </div>
                <input type="range" min=0 max=100 value=50 class="sliderInside" id=@temp2>

                @{
                    temp = "maxVal_" + temp2;
                }


                <div class="leftRight" id=@temp>
                    @attName.Value[1]
                </div>
            </div>
        }
    }
    
    @if (true)
    {
        Html.BeginForm("RenderSearchPanel","ProductSummary");
            <button class="btn btn-sm btn-primary" type="submit" id="btnCompare" disabled>Compare</button>
        Html.EndForm();
    }
</div>
<script>

</script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
