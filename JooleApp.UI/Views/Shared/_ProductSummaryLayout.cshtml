<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/ProductSummary")
  
</head>
<body class="productSummaryLayoutBodyMain">
    <div class="productSummaryLayoutBody">
        <div class="productSummaryLayoutHeader">
            <img class="brandImage" src="@Url.Content("~/Images/Joole_logo.png")" />
            
            <img id="avatar" src=@Session["UserAvatar"].ToString()>
        </div>

        <div class="productSummaryLayoutContent">
            @RenderBody()
        </div>

        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/ProductSummary")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
